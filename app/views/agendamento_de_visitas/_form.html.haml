= form_for @agendamento_de_visita do |f|
  - if @agendamento_de_visita.errors.any?
    #error_explanation
      %h2= "#{pluralize(@agendamento_de_visita.errors.count, "error")} prohibited this agendamento_de_visita from being saved:"
      %ul
        - @agendamento_de_visita.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :data
    = f.date_select :data
  .field
    = f.label :hora
    = f.text_field :hora
  .field
    = f.label :imovel_id
    = f.collection_select :imovel_id, @imoveis, :id, :endereco
  .field
    = f.label :usuario_id
    = f.collection_select :usuario_id, @usuarios, :id, :nome
  .actions
    = f.submit 'Save'
