= form_for @imovel do |f|
  - if @imovel.errors.any?
    #error_explanation
      %h2= "#{pluralize(@imovel.errors.count, "error")} prohibited this imovel from being saved:"
      %ul
        - @imovel.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :endereco
    = f.text_field :endereco
  .field
    = f.label :area
    = f.text_field :area
  .field
    = f.label :quarto
    = f.text_field :quarto
  .field
    = f.label :sala
    = f.text_field :sala
  .field
    = f.label :cozinha
    = f.text_field :cozinha
  .field
    = f.label :banheiro
    = f.text_field :banheiro
  .field
    = f.label :areaExterna
    = f.text_field :areaExterna
  .field
    = f.label :areaDeServico
    = f.text_field :areaDeServico
  .field
    = f.label :garagem
    = f.text_field :garagem
  .field
    = f.label :tipo_de_imovel
    = f.text_field :tipo_de_imovel
  .field
    = f.label :proprietario
    = f.text_field :proprietario
  .actions
    = f.submit 'Save'
